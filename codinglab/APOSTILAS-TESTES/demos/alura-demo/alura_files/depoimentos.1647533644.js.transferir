(function(){const body=document.body;const videos=document.getElementsByClassName('testimony-video-preview');const videoWindow=document.getElementById('videoModalWindow');const videoIframe=document.getElementById('videoIframe');for(let i=0;i<videos.length;i++){videos[i].addEventListener('click',function(e){body.classList.add('videoShadow');videoWindow.classList.add('--show');videoIframe.src='https://www.youtube.com/embed/'+this.getAttribute('data-src')+'?autoplay=1';e.stopPropagation()})}
body.addEventListener('click',function(e){if(body.classList.contains('videoShadow')&&e.target!=videoWindow){body.classList.remove('videoShadow');videoWindow.classList.remove('--show');videoIframe.src='';e.stopPropagation()}})})()